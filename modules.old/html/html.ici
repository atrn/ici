}

extern
image(src, alt, border, width, height)
{
    auto alt = "An image";

    put(sprintf("<img src=\"%s\" alt=\"%s\"", src, alt));
#    put(sprintf("<img src=\"%s\"", src));
    if (border != NULL)
	put(sprintf("border=\"%d\"", border));
    if (width != NULL)
	put(sprintf("width=\"%d\"", width));
    if (height != NULL)
	put(sprintf("height=\"%d\"", height));
    put(">");
}


