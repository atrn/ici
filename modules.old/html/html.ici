extern
submit_button(title, type)
{
    auto type = "submit";

    if (!title)
	put(sprintf("<input type=\"%s\">", type));
    else
    {
	put
	(
	    sprintf
	    (
		"<input type=\"%s\" value=\"%s\">",
		type,
		title
	    )
	);
    }
}

extern
reset_button(title)
{
    return submit_button(title, "reset");
}

