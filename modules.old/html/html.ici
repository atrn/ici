/*
 * Fonts...
 */
extern
start_font(name)
{
    auto	v, vargs = [array];

    put(sprintf("<font face=\"%s\"", name));
    forall (v in vargs)
	put(sprintf(" %s", v));
    put(sprintf(">"));
}

extern
font()
{
    auto	v, vargs = [array];

    put("<font");
    forall (v in vargs)
	put(sprintf(" %s", v));
    put(sprintf(">"));
}

extern
end_font()
{
    put(sprintf("</font>"));
}

/*
 * Encode special characters in text intended to be output as HTML.
 *
 *	&	=>	&amp;
 *	<	=>	&lt;
 *	>	=>	&gt;
 */
extern
encode_string(s)
{
    s = gsub(s, #&#, "&amp;");
    s = gsub(s, #<#, "&lt;");
    s = gsub(s, #>#, "&gt;");
    return s;
}

extern
printf()
{
    auto	vargs = [array];
    auto	s;
    auto	f = stdout;

    s = call(sprintf, vargs);
    if (typeof(vargs[0]) == "file")
	f = vargs[0];
    put(encode_string(s), f);
    return nels(s);
}

extern
nbsp(n)
{
    auto n = 1;
    while (n-- > 0)
	put("&nbsp;");
}

