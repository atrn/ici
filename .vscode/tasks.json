{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "taskName": "build",
                        "command": "make",
                        "type": "shell",
                        "problemMatcher": "$gcc",
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "presentation": {
                                "echo": true,
                                "reveal": "always",
                                "focus": false,
                                "panel": "shared"
                        }
                },
                {
                        "taskName": "clean",
                        "command": "make clean",
                        "type": "shell",
                        "group": "build",
                        "presentation": {
                                "echo": false,
                                "reveal": "silent",
                                "focus": false,
                                "panel": "shared"
                        }
                }
        ]
}