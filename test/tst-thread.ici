/*
 * We use Ackerman's function to do work.
 */
local ack(x, y)
{
    return x > 0
        ? ack(x - 1, y > 0 ? ack(x, y - 1) : 1)
        : y + 1;
}

x := go(ack, 2, 3);
waitfor (x.result != NULL; x) {
    ;
}
if (x.result != 9)
    fail("incorrect result from func in other thread");

